<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/opacity_Eighty_percent"
    tools:context=".Correct">
    <ImageView
        android:id="@+id/image_view_correct"
        android:padding="2dp"
        android:src="@drawable/correct_animation"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aha_correct"
        android:textColor="@color/background_121212"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/correct_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_121212"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/next_level"
        android:textColor="@color/opacity_Eighty_percent"
        android:textSize="20sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_baseline_play_arrow_24"
        app:iconGravity="start"
        app:iconPadding="10dp"
        app:iconTint="@color/opacity_Eighty_percent" />


</LinearLayout>